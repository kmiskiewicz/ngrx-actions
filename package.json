{
  "name": "ngrx-typed-actions",
  "version": "8.0.0",
  "description": "Actions and Reducer Utility Library for NGRX",
  "main": "dist/index.js",
  "scripts": {
    "build": "ng-packagr -p package.json",
    "test": "ngc -p tsconfig.spec.json && jasmine dist/spec/*.spec.js",
    "publish": "npm publish dist",
    "precommit": "lint-staged",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "prettier": "prettier --parser typescript --single-quote es5 --write \"**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmiskiewicz/ngrx-typed-actions.git"
  },
  "keywords": [
    "ngrx",
    "redux",
    "state",
    "store",
    "state-mangement"
  ],
  "author": "Austin McDaniel, Krzysztof Mi≈õkiewicz, Arturn Maciejaszek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kmiskiewicz/ngrx-typed-actions/issues"
  },
  "homepage": "https://github.com/kmiskiewicz/ngrx-typed-actions#readme",
  "peerDependencies": {
    "@ngrx/effects": "^8.0.1",
    "rxjs": "^6.5.3"
  },
  "devDependencies": {
    "@angular/compiler": "^8.2.11",
    "@angular/compiler-cli": "^8.2.11",
    "@types/jasmine": "^3.3.13",
    "husky": "^2.4.1",
    "jasmine": "^3.4.0",
    "lint-staged": "^8.2.1",
    "ng-packagr": "^5.3.0",
    "package-preview": "^2.0.0",
    "prettier": "^1.18.2",
    "reflect-metadata": "^0.1.13",
    "tsickle": "^0.35.0",
    "tslint": "^5.17.0",
    "typescript": "^3.4.5",
    "zone.js": "^0.9.1",
    "@angular/core": "^8.2.11",
    "@ngrx/store": "^8.4.0"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "src/index.ts"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run prettier",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  }
}
